    <Grid>
        <StackPanel HorizontalAlignment="Center" MaxWidth="1700" x:Name="RootElement">
            <TextBlock x:Name="MainLabel" Style="{StaticResource TitleLargeTextBlockStyle}" Margin="36 40 36 36">Конкурсные списки</TextBlock>
            <Button Visibility="Collapsed" HorizontalAlignment="Center" Margin="0 0 0 20" Content="Изменить последний элемент" Click="Button_Click"/>

            <GridView x:Name="MainGridView" SelectionMode="None" Margin="36 0" IsItemClickEnabled="True" ItemClick="MainGridView_ItemClick" ItemsSource="{x:Bind mainWindowViewModel.CompetitionListDatas}">
