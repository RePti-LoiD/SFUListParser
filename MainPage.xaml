                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Доп. Баллы" Foreground="{StaticResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock Margin="15 0 0 0" Text="{x:Bind AdditionalPoints}"/>
